<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:name=".DocEaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DocEase">
        
        <!-- Splash Screen - App Entry Point -->
        <activity
            android:name=".ui.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.DocEase.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Role Selection Activity -->
        <activity
            android:name=".ui.auth.RoleSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Splash" />
        
        <!-- Login Activity -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Sign Up Activity -->
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Forgot Password Activity -->
        <activity
            android:name=".ui.auth.ForgotPasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Doctor Dashboard Activity -->
        <activity
            android:name=".ui.dashboard.DoctorDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Doctor Profile Setup Activity -->
        <activity
            android:name=".ui.profile.DoctorProfileSetupActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient Profile Setup Activity -->
        <activity
            android:name=".ui.profile.PatientProfileSetupActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Doctor Availability Activity -->
        <activity
            android:name=".DoctorAvailabilityActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Doctor Appointments Activity -->
        <activity
            android:name=".DoctorAppointmentsActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Patient Details Activity -->
        <activity
            android:name=".PatientDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Patient Dashboard Activity -->
        <activity
            android:name=".ui.patient.PatientDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Search Doctor Activity -->
        <activity
            android:name=".ui.search.SearchDoctorActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Find Doctor Activity -->
        <activity
            android:name=".ui.finddoctor.FindDoctorActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Doctor Details Activity -->
        <activity
            android:name=".ui.doctor.DoctorDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Book Appointment Activity -->
        <activity
            android:name=".ui.booking.BookAppointmentActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Appointment Status Activity -->
        <activity
            android:name=".ui.appointment.AppointmentStatusActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Patient Appointments Activity -->
        <activity
            android:name=".ui.appointments.PatientAppointmentsActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Patient Profile Activity -->
        <activity
            android:name=".ui.profile.PatientProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Notifications Activity -->
        <activity
            android:name=".ui.notifications.NotificationsActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Settings Activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.DocEase.Dashboard" />
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".service.DocEaseFCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="DocEase_Notifications" />
        <!-- AdMob App ID (use test App ID during development). Replace with your production App ID before release. -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6426344841322101~2471228931" />

    </application>

</manifest>