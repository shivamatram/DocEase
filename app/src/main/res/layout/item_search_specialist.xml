<?xml version="1.0" encoding="utf-8"?>
<!-- Search specialist card item layout -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/specialistCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/docease_background"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Doctor Image Container -->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="90dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Doctor Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/avatarCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/doctorAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar_placeholder"
                    android:contentDescription="Doctor Avatar" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Rating Badge on Image -->
            <LinearLayout
                android:id="@+id/ratingBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_rating_overlay"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_star_small"
                    android:contentDescription="Rating" />

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/docease_background"
                    android:textSize="11sp"
                    tools:text="4.8" />

            </LinearLayout>

        </FrameLayout>

        <!-- Favorite Button -->
        <ImageView
            android:id="@+id/favoriteButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@drawable/ic_heart_outline"
            android:contentDescription="Add to Favorites"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Doctor Name -->
        <TextView
            android:id="@+id/doctorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:textColor="@color/docease_text_primary"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/favoriteButton"
            app:layout_constraintStart_toEndOf="@id/imageContainer"
            app:layout_constraintTop_toTopOf="@id/imageContainer"
            tools:text="Dr. Dianne Russell" />

        <!-- Specialty & Hospital -->
        <TextView
            android:id="@+id/specialtyHospital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:textColor="@color/docease_text_secondary"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageContainer"
            app:layout_constraintTop_toBottomOf="@id/doctorName"
            tools:text="Dermatologist â€¢ City Hospital" />

        <!-- Availability Indicator -->
        <LinearLayout
            android:id="@+id/availabilityContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/imageContainer"
            app:layout_constraintTop_toBottomOf="@id/specialtyHospital">

            <View
                android:id="@+id/availabilityDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_availability_available" />

            <TextView
                android:id="@+id/availabilityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                tools:text="Available Today" />

        </LinearLayout>

        <!-- Next Slot Container -->
        <LinearLayout
            android:id="@+id/nextSlotContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/imageContainer"
            app:layout_constraintTop_toBottomOf="@id/availabilityContainer">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_clock_gray"
                android:contentDescription="Time" />

            <TextView
                android:id="@+id/nextSlotText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/docease_text_secondary"
                android:textSize="12sp"
                tools:text="Next slot: 2:00 PM" />

        </LinearLayout>

        <!-- Book Now Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/bookNowButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:backgroundTint="@color/docease_primary"
            android:fontFamily="@font/poppins_semibold"
            android:paddingHorizontal="18dp"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textColor="@color/docease_background"
            android:textSize="12sp"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="@id/imageContainer"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
