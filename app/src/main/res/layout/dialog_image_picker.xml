<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/docease_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dialog Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:paddingVertical="12dp"
        android:text="Change Profile Photo"
        android:textColor="@color/docease_text_primary"
        android:textSize="18sp" />

    <!-- Camera Option -->
    <LinearLayout
        android:id="@+id/optionCamera"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_camera_filled"
            app:tint="@color/docease_primary"
            android:contentDescription="Camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Take Photo"
            android:textColor="@color/docease_text_primary"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- Gallery Option -->
    <LinearLayout
        android:id="@+id/optionGallery"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gallery"
            app:tint="@color/docease_primary"
            android:contentDescription="Gallery" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Choose from Gallery"
            android:textColor="@color/docease_text_primary"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- Remove Photo Option -->
    <LinearLayout
        android:id="@+id/optionRemove"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            app:tint="#F44336"
            android:contentDescription="Remove" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Remove Photo"
            android:textColor="#F44336"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
