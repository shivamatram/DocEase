<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dateChipContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/dateChipContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_date_chip_unselected"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:minWidth="64dp">

        <!-- Day Label (TODAY, Mon, Tue, etc.) -->
        <TextView
            android:id="@+id/tvDayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/docease_text_secondary"
            android:includeFontPadding="false"
            tools:text="TODAY" />

        <!-- Day Number -->
        <TextView
            android:id="@+id/tvDayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/docease_text_primary"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            tools:text="12" />

    </LinearLayout>

</FrameLayout>
