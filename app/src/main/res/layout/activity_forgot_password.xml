<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/docease_screen_background"
    tools:context=".ui.auth.ForgotPasswordActivity"
    android:fitsSystemWindows="true">

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- TOP APP BAR                                                     -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Go back"
        android:padding="12dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/docease_text_primary" />

    <TextView
        android:id="@+id/tvAppBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Forgot Password"
        android:textColor="@color/docease_text_primary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- ILLUSTRATION SECTION                                            -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIllustration"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_forgot_password_card" />

        <ImageView
            android:id="@+id/ivLockIllustration"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:contentDescription="Lock illustration"
            android:src="@drawable/ic_lock_medical" />

    </androidx.cardview.widget.CardView>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- TITLE & DESCRIPTION                                             -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Forgot Password?"
        android:textColor="@color/docease_text_primary"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardIllustration" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Don't worry! It happens. Please enter the email address linked to your account."
        android:textColor="@color/docease_text_secondary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- EMAIL INPUT FIELD                                               -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <LinearLayout
        android:id="@+id/layoutEmailInput"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_input_field"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Email icon"
            android:src="@drawable/ic_email" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:hint="Enter your email"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColor="@color/docease_text_primary"
            android:textColorHint="@color/docease_text_hint"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- SEND RESET LINK BUTTON                                          -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <Button
        android:id="@+id/btnSendResetLink"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_button_primary"
        android:fontFamily="sans-serif-medium"
        android:text="Send Reset Link"
        android:textAllCaps="false"
        android:textColor="@color/docease_button_text_primary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutEmailInput" />

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- BACK TO LOGIN LINK                                              -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <TextView
        android:id="@+id/tvBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:paddingVertical="8dp"
        android:text="Back to Login"
        android:textColor="@color/docease_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSendResetLink" />

    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- SUCCESS STATE (Initially Hidden)                                -->
    <!-- ═══════════════════════════════════════════════════════════════ -->

    <LinearLayout
        android:id="@+id/layoutSuccess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <!-- Success Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Success"
            android:src="@drawable/ic_check_circle"
            app:tint="@color/docease_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="Email Sent!"
            android:textColor="@color/docease_text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSuccessMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="We have sent a password reset link to your email address."
            android:textColor="@color/docease_text_secondary"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnBackToLoginSuccess"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/selector_button_primary"
            android:fontFamily="sans-serif-medium"
            android:text="Back to Login"
            android:textAllCaps="false"
            android:textColor="@color/docease_button_text_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvResendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:paddingVertical="8dp"
            android:text="Didn't receive email? Resend"
            android:textColor="@color/docease_text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
