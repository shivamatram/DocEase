<?xml version="1.0" encoding="utf-8"?>
<!-- Specialty item layout for horizontal list -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:gravity="center"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <!-- Icon Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/specialtyIconContainer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="#F0FFFE"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/specialtyIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:contentDescription="Specialty Icon"
            tools:src="@drawable/ic_dentist" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Specialty Name -->
    <TextView
        android:id="@+id/specialtyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/docease_text_primary"
        android:textSize="13sp"
        tools:text="Dentist" />

</LinearLayout>
