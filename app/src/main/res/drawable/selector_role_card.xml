<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/docease_gradient_start" />
            <stroke
                android:width="2dp"
                android:color="@color/docease_primary" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/docease_gradient_start" />
            <stroke
                android:width="1.5dp"
                android:color="@color/docease_primary_light" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/docease_background" />
            <stroke
                android:width="1.5dp"
                android:color="@color/docease_divider" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
</selector>
